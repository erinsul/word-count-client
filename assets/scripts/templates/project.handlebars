{{#project}}
  <h1>{{title}}</h1>
  <div class="progress">
    <div class="progress-bar" role="progressbar" aria-valuenow="{{percent}}" aria-valuemin="0" aria-valuemax="100" style="width: {{percent}}%;">
      {{percent}}%
    </div>
  </div>
    <div id = "project-info">
      <ul>
      <li><p>Due on: {{end_date}}</p></li>
      <li class><p class="form">Update your deadline:</p>
      <form class="update" data-id={{id}}>
        <fieldset>
          <input type="date" name="projects[end_date]" placeholder="target end date (yyyy-mm-dd)">
          <input type="submit" name="submit" value="Update">
        </fieldset>
      </form>
      <p class = "error-message"></p>
      </li>
      <li><p>Days left: {{days_left}}</p></li>
      <li><p>Current {{counter}} count: {{current_count}}</p></li>
      <li><p class="form">Update your {{counter}} count:</p>
      <form class="update" data-id={{id}}>
        <fieldset>
          <input type="text" name="projects[current_count]" placeholder="current count">
          <input type="submit" name="submit" value="Update">
        </fieldset>
      </form>
      </li>
      <li><p class="form">Change your total goal:</p>
      <form class="update" data-id={{id}}>
        <fieldset>
          <input type="text" name="projects[total_count]" placeholder="total goal">
            <label for="page"> <input type="radio" name = "projects[counter]" value="page"/> pages</label>
            <label for="word"> <input type="radio" name = "projects[counter]" value="word"/> words</label>
          <input type="submit" name="submit" value="Update">
        </fieldset>
      </form>
      </li>
      <li><p>Total {{counter}}s remaining: {{amount_remaining}}</p></li>
      <li><p>You need to do {{amount_per_day}} {{counter}}s per day to finish on time.</p></li>
    </ul>
    </div>
{{/project}}
